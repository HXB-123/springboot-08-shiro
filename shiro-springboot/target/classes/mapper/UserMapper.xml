<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "_//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org//dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huang.shirospringboot.mapper.UserMapper">
    <select id="queryUserByName" parameterType="java.lang.String" resultType="com.huang.shirospringboot.pojo.User">
        select * from mybatis.user where name = #{name}
    </select>
</mapper>